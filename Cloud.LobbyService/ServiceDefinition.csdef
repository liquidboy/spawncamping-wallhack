<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Cloud.LobbyService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2013-10.2.2">
  <WorkerRole name="Cloud.LobbyService.WorkerRole" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="ServiceBusCredentials" />
      <Setting name="StorageConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="LobbyService" protocol="tcp" port="3003" />
    </Endpoints>
  </WorkerRole>
  <WorkerRole name="Cloud.GameServerHost.WorkerRole" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InstanceInputEndpoint name="gameServerInstanceEndpoint" protocol="tcp" localPort="10000">
        <AllocatePublicPortFrom>
          <FixedPortRange max="10100" min="10000" />
        </AllocatePublicPortFrom>
      </InstanceInputEndpoint>
    </Endpoints>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="ServiceBusCredentials" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>